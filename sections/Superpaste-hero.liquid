<div class="Herobanner-container">

    <img src="{{section.settings.desktop_image | img_url:'master'}}"  class="Herobanner-image hero-desktop" />
    <img src="{{section.settings.mobile_image | img_url:'master'}}"  class="Herobanner-image hero-mobile hero-alternative-mobile {% if section.settings.height_selector == 'small' %} mobile-image-banner-sm {% else %} mobile-image-banner-lg {% endif %}" />

    <div class="superpaste-hero-content">
        <h1 class="superpaste-hero-heading" style="font-size: {{section.settings.heading_size}} !important">{{section.settings.heading}}</h1>
        <div class="bottom-container">
            <p class="superpaste-hero-subheading">{{section.settings.subheading}}</p>
            <a href="{{section.settings.button_link}}" class="hero-button superpaste-hero-button" style="background-color: {{section.settings.button_color}};">{{section.settings.button_text}}</a>
    
        </div>
    </div>

</div>


