<div class="img-w-text-overlay-container">
    <img src="{{section.settings.desktop_img | img_url: 'master'}}" class="hero-desktop">
    <img src="{{section.settings.mobile_img | img_url: 'master'}}" class="hero-mobile image-overlay-mobile">
    <div class="overlay-content">
        <h1>{{section.settings.heading}}</h1>
        {{section.settings.description}}
        <a href="{{section.settings.button_link}}" class="overlay-button">{{section.settings.button_text}}</a>
    </div>
</div>

{% schema %}
{
   "name": "MC|Image w/ Text Overlay",
   "settings" : [
    {
        "type": "image_picker",
        "id": "desktop_img",
        "label": "Desktop Image"
    },
    {
        "type": "image_picker",
        "id": "mobile_img",
        "label": "Mobile Image"
    },
    {
        "type": "header",
        "content": "Text Settings"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
    },
    {
        "type": "richtext",
        "id": "description",
        "label": "Description"
    },
    {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
    },
    {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
    },
    {
        "type": "header",
        "content": "Color Settings"
    },
    {
        "type": "color",
        "id": "text_background_color",
        "label": "Text Background Color",
        "default": "#ffffff"
    },
    {
        "type": "color",
        "id": "overlay_text_color",
        "label": "Text Color",
        "default": "#000000"
    },
    {
        "type": "color",
        "id": "button_color",
        "label": "Button Color",
        "default": "#000000"
    },
    {
        "type": "color",
        "id": "button_text_color",
        "label": "Button Text Color",
        "default": "#ffffff"
    }
    
   ],
   "presets": [
    {
        "name": "MC|Image w/ Text Overlay"
    }
   ]
}
{% endschema %}


<style>

.overlay-content{
    color: {{section.settings.overlay_text_color}};
    background-color: {{section.settings.text_background_color}};
}

@media(max-width:768px){
    .overlay-content{
        background-color: {{section.settings.text_background_color}}c7;
    }
    
}

.overlay-button{
    font-family: 'Raleway', sans-serif !important; 
    background-color: {{section.settings.button_color}};
    color: {{section.settings.button_text_color}};

}

</style>