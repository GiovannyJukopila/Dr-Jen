
{% if section.settings.override_css != blank %}


{% assign sectionTemplate = 'shopify-section-'| append: section.id %}

{% capture sectionIdentifier %}
  #{{sectionTemplate}}
{% endcapture %}

<style>
 {{ section.settings.override_css | replace: '[SectionID]' , sectionIdentifier }}
</style>
{% endif %}

<div class="homepage-1x4">
    {% if section.settings.heading != blank %}
        <h1>{{section.settings.heading}}</h1>
    {% endif %}

    {% if section.settings.subheading != blank %}
        {{section.settings.subheading}}
    {% endif %}


    <div class="homepage-1x4-icons">
        {% for block in section.blocks %}

            <div class="icon">
                <img src="{{block.settings.image | img_url: '200x'}}">
                <h3>{{block.settings.title}}</h3>
                <p>{{block.settings.info}}</p>
            </div>
            
        {% endfor %}
    </div> 

</div>


{% schema %}
{
   "name": "Homepage-1x4",
   "settings" : [

    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Dr Jen Natural Toothpaste is like no other."
    },

    {
        "type": "richtext",
        "id": "subheading",
        "label": "Sub Heading",
        "default": "<p>Introducing our uniquely crafted natural toothpaste, created by a real dentist using nourishing & natural ingredients, and  proven to remineralize tooth enamel to prevent decay.</p>"
    },
    {
        "type": "textarea",
        "id": "override_css",
        "label": "CSS Override"
    }
   ],

   "blocks" : [
    {
        "name": "Icon Block",
        "type": "Icon-Block",
        "limit" : 4,
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Icon"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Icon Title"
            },
            {
                "type": "textarea",
                "id": "info",
                "label": "Icon Information"
            }
        ]
    }
   ],

   "presets": [
    {
        "name": "Homepage-1x4"
    }
   ]
}
{% endschema %}