
<div class="text-w-image" style="background: {{section.settings.Background_Color}};">
    <h1>{{section.settings.heading}}</h1>
    <p>{{section.settings.subheading}}</p>
    <img src="{{section.settings.section_image | img_url: 'master'}}" />
    {% if section.settings.additional_text != blank %}
    <div class="compare-subtext">{{section.settings.additional_text}}</div>
    <div class="compare-icons-container">
        <div class="compare-single">
            <img src="{{section.settings.first_icon | img_url: 'master'}}" class="compare-icon" />
            <div class="compare-single-text">{{section.settings.first_icon_text}}</div>
        </div>
        <div class="compare-single">
            <img src="{{section.settings.second_icon | img_url: 'master'}}" class="compare-icon" />
            <div class="compare-single-text-2">{{section.settings.second_icon_text}}</div>
        </div>
    </div>
    {% endif %}
    {% if section.settings.button_text != blank %}
        <a href="{{section.settings.button_url}}" class="hero-button" style="background-color: {{section.settings.button_color}};">{{section.settings.button_text}}</a>
    {% endif %}

</div>


{% schema %}
{
   "name": "Text With Image -compare",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Subheading"
        },
        {
            "type": "image_picker",
            "id": "section_image",
            "label": "Image"
        },
        {
            "type": "header",
            "content": "Lower Text Area"
        },
        {
            "type": "text",
            "id": "additional_text",
            "label": "Additional Text"
        },
        {
            "type": "image_picker",
            "id": "first_icon",
            "label": "Icon 1"
        },
        {
            "type": "text",
            "id": "first_icon_text",
            "label": "Icon 1 Text"
        },
        {
            "type": "image_picker",
            "id": "second_icon",
            "label": "Icon 2"
        },
        {
            "type": "text",
            "id": "second_icon_text",
            "label": "Icon 2 Text"
        },        
        {
            "type": "header",
            "content": "Button Settings"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text"
        },
        {
            "type": "color",
            "id": "button_color",
            "label": "Button Color",
            "default": "#df477f"
        },
        {
            "type": "color",
            "id": "Background_Color",
            "label": "Background Color",
            "default": "#fdf3ef"
        }
    ],
   "presets": [
    {
        "category": "Text w/ Image",
        "name":"Text w/ Image"
    }
   ]
}
{% endschema %}